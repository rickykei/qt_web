<script type="text/javascript">
function goEval() {
	$('#evalForm').submit();
}

$(function() {
	Calendar.setup({
	    inputField : "BenchmarkingEvalForm_startDate",
	    trigger    : "startDate",
	    onSelect   : function() { this.hide() }
	});

	Calendar.setup({
	    inputField : "BenchmarkingEvalForm_endDate",
	    trigger    : "endDate",
	    onSelect   : function() { this.hide() }
	});
});
</script>
